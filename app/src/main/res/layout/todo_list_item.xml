<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="13dp"
    android:layout_marginEnd="13dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"

        app:cardBackgroundColor="#256"
        android:padding="3dp"
        android:id="@+id/drop_down_arrow">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/body1"
        android:padding="0dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/down"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/task_title"
            android:layout_centerVertical="true"
            android:text="READING TIME"
            android:textColor="#fff"
            android:textSize="20sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/drop_body"
        android:padding="5dp"
        android:visibility="gone"
        android:layout_gravity="bottom"
        android:layout_marginTop="50dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/task_description"
            android:textColor="@color/white"
            android:text="Description: At 10:00pm"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"/>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/trash"
            android:layout_toLeftOf="@+id/task_description"
            android:layout_centerVertical="true"
            android:id="@+id/delete_btn"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_toLeftOf="@+id/delete_btn"
            android:src="@drawable/edit_icon"
            android:layout_centerVertical="true"
            android:id="@+id/edit_btn"
            android:layout_marginRight="10dp"/>

<ImageView
    android:layout_width="18dp"
    android:layout_height="18dp"
    android:layout_toLeftOf="@+id/edit_btn"
    android:src="@drawable/tick"
    android:layout_centerVertical="true"
    android:id="@+id/done"
    android:layout_marginRight="10dp"/>
    </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>